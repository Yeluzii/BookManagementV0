<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.cjw.bookmanagementv0.mapper.UserMapper">
    <insert id="add" parameterType="top.cjw.bookmanagementv0.entity.User">
        insert into user(username,password) value (#{username}, #{password})
    </insert>
    <update id="update">
        update user set password = #{password}
        WHERE username = #{username}
    </update>
    <update id="updateIsAdminByUserName">
        update user set isAdmin = #{isAdmin}
        WHERE username = #{username}
    </update>
    <update id="updateAvatar">
        update user set avatar = #{avatar}
        WHERE username = #{username}
    </update>
    <delete id="deleteUser">
        DELETE
        FROM user
        WHERE userId = #{userId}
    </delete>
    <select id="selectByUserName" parameterType="String" resultType="top.cjw.bookmanagementv0.entity.User">
        SELECT *
        FROM user
        WHERE username = #{username}
    </select>
    <select id="selectAll" resultType="top.cjw.bookmanagementv0.entity.User">
        SELECT *
        FROM user
    </select>
    <select id="selectIsAdminByUserName" resultType="top.cjw.bookmanagementv0.entity.User">
        SELECT isAdmin
        FROM user
        WHERE username = #{username}
    </select>
    <select id="selectByPartUserName" resultType="top.cjw.bookmanagementv0.entity.User">
        SELECT *
        FROM user
        WHERE username like concat('%', #{username}, '%')
    </select>
</mapper>